<% content_for :head do %>
  <script type="text/javascript">

    $(document).ready( function(){
      
      var url = "/proxy/<%=@paper.arxiv_no%>";
      $('#mypdfdoc').PDFDoc( { source : url } );

    });
  </script>
<%end%>

<div id="main-bar">
</div>
<div id="main">
  <div class="left-certified">
    <%= image_tag "oja_certified.png", :class => "certification-status" %>
  </div>  
  <div class="central-certified">
    <div style="width: 400px; height: 600px;">
        <div id="mypdfdoc"></div>
    </div>  
  </div>
  <div class="right-certified">
    <%= image_tag "fold.png", :class => "fold" %>
    <h3 class="about">About this paper</h3>
    <div class="paper">
      <p class="kind">Title</p>
      <p class="value">Galaxy Zoo: Bulgeless Galaxies with Growing Black Holes</p>
      
      <p class="kind">Author</p>
      <p class="value">Lintott, C. J. et al</p>
      
      <p class="kind">Year</p>
      <p class="value">2009</p>
      
      <p class="kind">Submission Date</p>
      <p class="value">1 November 2012</p>
      
      <p class="kind">Review Status</p>
      <p class="value">Reviewed &amp; Accepted</p>
    </div>
  </div>
  <div class="clear"></div>
</div>